@model ContactModel

@{
    ViewBag.Title = $"{ViewBag.Action} Contact";
}

<h2>@ViewBag.Action Contact</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ContactId" />

    <div class="form-group">
        <label asp-for="FirstName">FirstName</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">LastName</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="0">Select a category</option>
            @foreach (CategoryModel c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Organization">Organization</label>
        <input asp-for="Organization" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark">@ViewBag.Action</button>
    
    @if (ViewBag.Action == "Edit")
    {
        <a asp-action="Details" asp-controller="Contact" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" class="btn btn-dark">Cancel</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Cancel</a>
    }

</form>