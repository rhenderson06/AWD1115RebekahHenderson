@{
    string message = TempData["message"]?.ToString();
    string subheader = ViewBag.Subheader;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TripLog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripLog8_1.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <header class="bg-secondary text-center text-white p-3 mb-2">
            <h1>My Trip Log</h1>
        </header>
        <main role="main" class="pb-3">
            @if (!string.IsNullOrEmpty(message))
            {
                <h2 class="bg-light text-center p-2 mb-1">@message</h2>
            }
            @if (!string.IsNullOrEmpty(subheader))
            {
                <h2 class="mb-2 mt-2">@subheader</h2>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - TripLog
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
