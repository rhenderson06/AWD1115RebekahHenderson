@model TripViewModel
@{
    ViewBag.Title = "Add Trip - Page 3";
    ViewBag.SubHeader = $"Add Things to do in {Model.Trip.Destination}";
}

<form asp-action="Add">
    <input type="hidden" asp-for="PageNumber" />

    <div class="form-group">
        <input asp-for="Trip.ThingToDo" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Trip.ThingToDo2" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Trip.ThingToDo3" class="form-control" />
    </div>

    <div>
        <button type="submit" class="btn btn-dark">Save</button>
        <a asp-action="Cancel" class="btn btn-outline-dark">Cancel</a>
    </div>
</form>