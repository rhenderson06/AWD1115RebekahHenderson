@model Employee

@{
    ViewBag.Title = "Add employee"; 
}

<h3>@ViewBag.Title</h3>

<form asp-action="Add" method="post">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="DOB" type="text" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DateOfHire" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="DateOfHire" type="text" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="DateOfHire" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ManagerID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <select asp-for="ManagerID" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "EmployeeID", "FullName"))">
                <option value="0"></option>
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="ManagerID" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>