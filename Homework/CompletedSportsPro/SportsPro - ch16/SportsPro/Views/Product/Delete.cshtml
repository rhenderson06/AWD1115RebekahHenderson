@model Product

@{
    ViewBag.Title = "Delete a Product";
}

<div class="jumbotron text-danger mt-4 px-2">
    <h1>Confirm deletion?</h1>
    <p>Are you sure you want to delete @Model.Name?</p>

    <form asp-controller="Product" asp-action="Delete" method="post">
        <input type="hidden" asp-for="ProductID" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>